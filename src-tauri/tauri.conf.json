{
  "build": {
    "devPath": "../src",
    "distDir": "../src",
    "withGlobalTauri": true,
    "beforeDevCommand": { "script": "npx tsc -w", "wait": false }
  },
  "package": {
    "productName": "fifi",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "os": {
        "all": true
      }
    },
    "windows": [
      {
        "title": "fifi",
        "width": 830,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    }
  }
}
